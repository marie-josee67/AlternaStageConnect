{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <div id="headerPage" >
            <h2>Modifier mon profil</h2>
        </div>
    </div>
    <div class="container">
        <div class="row row-cols-1">
        {{ form_start(formProfilEdit) }}
        {{ form_row(formProfilEdit.firstname) }}
        {{ form_row(formProfilEdit.lastname) }}
        {{ form_row(formProfilEdit.email) }}
        {{ form_row(formProfilEdit.plainPassword) }}
        {{ form_row(formProfilEdit.confirmPassword) }}

            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="{{ path('app_user_profil') }}" class="btn btn-secondary">Annuler</a>
            {{ form_end(formProfilEdit) }}
        </div>
    </div>
</div>
{% endblock %}
