{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div id="headerPage" >
            <h1>Liste de mes annonces</h1>
            <p> Site fictif</p>
        </div>
    </div>
    <div id="boutonAjoutAnnonce" class="row row-cols-4 ">
        <twig:BootstrapButton type="success" text="Ajouter une annonce" path="{{ path('app_annonce_create') }}" />
        {# </twig:BootstrapButton> #}
    </div>
    <div class="container">
        <div class="row row-cols-1 row-cols-md-4 g-4">

            {# ********************* Les cards ****************** #}
            {% for annonce in annonces %}
                <div class="col mb-4">
                    <twig:BootstrapCard
                        title="{{ annonce.description }}"
                        imgSrc="{{annonce.filname }}"
                        btnLink=""
                        btnLabel="Détails"
                    >
                    </twig:BootstrapCard>
                </div>
            {% else %} 
            <p> Aucune annonce n'a été trouvée </P
            {% endfor %}
    </div>
</div>
    {# {{dump(annonces)}} #}

{% endblock %}
